<link rel="stylesheet" href="{{ asset('bundles/app/css/bootstrap.min.css') }}">
<body style="background:#e6ffe6">
	<div class="container" style='background:#d8eac8; height:100%'>
		<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">SuperShop</a>
    </div>
    <ul class="nav navbar-nav">
    	{% block body %}
	    {% if user.login is defined %}
				<li class="active"><a href="{{ path('gender', {'var': user.login, 'user_id' : user.id}) }}"> Home page</a></li>
				
		{% else %}
	     		<li class="active"><a href="{{ path('gender') }}">  Home page </a></li>

		{% endif %}
		{% endblock %}
    </ul>

    <ul class="nav navbar-nav navbar-right">
      <li><a href="{{ path('register') }}"><span class="glyphicon glyphicon-user"></span> Register</a></li>
    </ul>
  </div>
</nav>
	<div class="row">
	{% if user.login is defined %}
	  <b style="margin:1%"> You are logged as {{ user.login }}<b><br>
	{% endif %}
	<div class="col-xs-2">


	<form class="form-signin" method="POST" action="login"><br>
		<input  class="form-control" type="login" name="login"><br>
		<input class="form-control" type="password" name="password"><br>
		<input  class="btn btn-lg btn-primary btn-block" type="submit" value="Sign in">
	</form>

</div>

</div>
</div>